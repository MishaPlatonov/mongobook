<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a href="#login" class="active">Вход</a></li>
        <li class="tab col s6"><a href="#register">Регистрация</a></li>
      </ul>
    </div>
    {{#if loginErr}}
      <div class="reg-err"><p>{{loginErr}}</p></div>
    {{/if}}
    {{#if loginPassErr}}
      <div class="reg-err"><p>{{loginPassErr}}</p></div>
    {{/if}}
    <div id="login" class="col s6 offset-s3">
      <h1>Вход в мaгазин</h1>
      <form action="/auth/login" method="post">
        <div class="input-field">
          <input id="email" type="email" class="validate" name="email" required="required">
          <label for="email">Введите ваш Email</label>
          <span class="helper-text" data-error="Некорректный email"></span>
        </div>
        <div class="input-field">
          <input id="password" type="password" class="validate" name="password" required="required">
          <label for="password">Введите ваш Password</label>
          <span class="helper-text" data-error="Не правильный пароль"></span>
        </div>
        <input type="hidden" name='_csrf' value='{{csrf}}'>
        <button class="btn btn-primary" type="submit">Вход</button>
      </form>
      <p class="forget__pass" style="text-align: center">
        <a href="/auth/reset">Забыли пароль?</a>
      </p>
    </div>
    {{#if error}}
    <div class="reg-1"><p>{{error}}</p></div>
    {{/if}}
    {{#if passErr}}
    <div class="reg-2"><p>{{passErr}}</p></div>
    {{/if}}
    <div id="register" class="col s6 offset-s3">
      <h1>Регистрация</h1>
      <form action="/auth/register" method="post">
        <div class="input-field">
          <input id="reg-name" type="text" class="validate" name="name">
          <label for="name">Введите ваше имя</label>
        </div>
        <div class="input-field">
          <input id="reg-email" type="email" class="validate" name="email" required="required">
          <label for="email">Введите Email</label>
          <span class="helper-text" data-error="Некорректный email"></span>
        </div>
        <div class="input-field">
          <input id="reg-password" type="password" class="validate" name="password" required="required">
          <label for="password">Введите ваш пароль</label>
          <span class="helper-text" data-error="Некорректный пароль"></span>
        </div>
        <div class="input-field">
          <input id="confirm" type="password" class="validate" name="confirm" required="required">
          <label for="confirm">Повторите ваш пароль</label>
          <span class="helper-text" data-error="Пароли не совпадают"></span>
        </div>
        <input type="hidden" name='_csrf' value='{{csrf}}'>
        <button class="btn btn-primary" type="submit">Регистрация</button>
      </form>
    </div>
  </div>
</div>
{{!-- LOGIN --}}

{{!-- REGISTRATION --}}
